<Window x:Class="SofaProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SofaProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="375" Width="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="220*"/>
        </Grid.RowDefinitions>
        <StackPanel
            Background="White"
            Orientation="Horizontal"
            HorizontalAlignment="Center">
            <Image
                Name="MainImage"
                Source="./Resourses/menu.png"
                Height="130"
                  />
            <TextBlock
                TextDecorations="Underline" 
                FontSize="20"
                FontWeight="DemiBold"
                Margin="14,24,50,0"
                VerticalAlignment="Center"
                Text="{Binding ElementName=FrmMain, Path=Content.Title}"/>
        </StackPanel>
            <Frame Name="FrmMain"
                   Grid.Column="0"
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden"
                   Grid.RowSpan="1"/>
    </Grid>
</Window>
